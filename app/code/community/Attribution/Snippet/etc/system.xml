<?xml version="1.0" encoding="UTF-8"?>
<config>
	<tabs>
        <attribution translate="label" module="attribution_snippet">
            <label>Attribution</label>
            <sort_order>1</sort_order>
        </attribution>
    </tabs>
    <sections>
		<attribution_snippet module="attribution_snippet">
			<label>Attribution App</label>
			<tab>attribution</tab>
			<sort_order>100</sort_order>
			<show_in_default>1</show_in_default>
			<show_in_website>1</show_in_website>
			<show_in_store>1</show_in_store>
			<groups>
                <general translate="label" module="attribution_snippet">
                    <label>General</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enable>
                            <label>Enabled</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enable>
                        <account_id>
                            <label>Account ID</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
							<validate>required-entry</validate>
                            <comment><![CDATA[Enter your Attribution App ID. You can find it in <a href='https://dashboard.attributionapp.com'>https://dashboard.attributionapp.com</a> in setting section of your account.]]></comment>
                        </account_id>
                    </fields>
                </general>
            </groups>
		</attribution_snippet>
    </sections>
</config>
